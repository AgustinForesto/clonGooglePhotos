<style>
    * {
        /* box-sizing: border-box; */
    }

    body {
        margin: 0px;
        font-family: 'segoe ui';
    }

    .nav {
        height: 50px;
        width: 100%;
        background-color: inherit;
        /* position: relative; */
    }

    .nav > .nav-header {
        display: inline;
    }
    /* > .nav-header */
    .nav > .nav-title {
        display: inline-block;
        font-size: 22px;
        padding: 10px 10px 10px 10px;
    }

    .nav > .nav-btn {
        display: none;
    }

    .nav > .nav-links {
        display: inline;
        float: right;
        font-size: 18px;
    }

    .nav > .nav-links > a {
        display: inline-block;
        padding: 13px 10px 13px 10px;
        text-decoration: none;
    }

    .nav > .nav-links > a:hover {
        background-color: rgba(187, 22, 22, 0.801);
    }

    .nav > #nav-check {
        display: none;
    }

    @media (max-width:600px) {
        .nav {
            display: flex;
            justify-content: space-between;
        }
        .nav > .nav-btn {
            display: block;
            max-width: 50px;
            width: 25vw;
            height: 100%;
            padding: 0;
        }
        .nav > .nav-btn > label {
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
            align-items: center;
            width: 100%;
            height: 100%;
            /* padding: 13px; */
        }
        .nav > .nav-btn > label > span {
            display: block;
            width: 80%;
            height: 5px;
            background-color: rgb(148, 1, 1);
        }
        .nav > .nav-links {
            position: absolute;
            display: block;
            width: 100%;
            background-color: rgba(168, 60, 60, 0.781);
            height: 0px;
            transition: all 0.3s ease-in;
            overflow-y: hidden;
            top: 50px;
            left: 0px;
        }
        .nav > .nav-links > a {
            display: block;
            width: 100%;
            color: rgb(1, 6, 39);
            text-align: center;
        }
        .nav > #nav-check:not(:checked) ~ .nav-links {
            height: 0px;
        }
        .nav > #nav-check:checked ~ .nav-links {
            height: calc(100vh - 50px);
            overflow-y: auto;
        }
    }
</style>

<nav class="nav">
    <div class="nav-title">
        Photos
    </div>
    <input type="checkbox" id="nav-check">
    <div class="nav-header"></div>
    
    <button class="nav-btn">
        <label for="nav-check">
            <span></span>
            <span></span>
            <span></span>
        </label>
    </button>
    
    <div class="nav-links">
        <a class="nav-link active" aria-current="page" href="/home">Home</a>
        <a class="nav-link" href="/albums">Albums</a>
    </div>
</nav>